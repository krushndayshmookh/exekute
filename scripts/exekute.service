[Unit]
Description=Exekute NodeJS Server
After=network.target

[Service]
Type=simple
User=krushn
WorkingDirectory=/home/krushn/exekute/server
ExecStart=/usr/bin/node src/index.js
Restart=always
RestartSec=5
Environment=NODE_ENV=production
Environment=PORT=3001

# Optional: increase file limits
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target